# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /main/index.html                          controllers.Application.index

GET /login/index.html         controllers.Login.createStateToken

GET /math/language/:code      controllers.CookieLang.switch(code:String)
GET /math/problem/:id         controllers.Math.problem(id:String)
GET /math/index.html     controllers.Math.list

GET /products controllers.Products.list

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


